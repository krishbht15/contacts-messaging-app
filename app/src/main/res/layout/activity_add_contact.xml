<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddContactActivity"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1e0e0"
   >

    <TextView
        android:id="@+id/firstNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_10dp"
        android:fontFamily="sans-serif"
        android:text="First Name"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:textColor="#21274b"
        android:textSize="@dimen/dimen_24sp"
        app:fontFamily="@font/roboto_condensed_bold" />
    <EditText
        android:layout_below="@id/firstNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameEditText"
        android:textSize="@dimen/dimen_20sp"
        android:textColor="#21274b"
        android:elevation="@dimen/dimen_10dp"

        android:text="Pehla naam"
        android:fontFamily="@font/roboto_condensed_bold"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@drawable/common_edit_text"
        />
    <TextView
        android:id="@+id/lastNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Last Name"
        android:elevation="@dimen/dimen_10dp"

        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_below="@id/firstNameEditText"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:textColor="#21274b"
        android:textSize="@dimen/dimen_24sp"
        app:fontFamily="@font/roboto_condensed_bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameEditText"
        android:layout_below="@id/lastNameText"
        android:textSize="@dimen/dimen_20sp"
        android:textColor="#21274b"
        android:text="Pehla naam"
        android:elevation="@dimen/dimen_10dp"

        android:fontFamily="@font/roboto_condensed_bold"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@drawable/common_edit_text"
        />

    <TextView
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Phone Number"
        android:elevation="@dimen/dimen_10dp"

        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_below="@id/lastNameEditText"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:textColor="#21274b"
        android:textSize="@dimen/dimen_24sp"
        app:fontFamily="@font/roboto_condensed_bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91"
        android:elevation="@dimen/dimen_10dp"

        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:textSize="@dimen/dimen_20sp"
        android:maxLines="1"
        android:fontFamily="@font/roboto_condensed_bold"
        android:layout_below="@id/phoneText"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textColor="#21274b"
        android:id="@+id/text91"
        android:background="@drawable/common_edit_text"/>

    <EditText
        android:elevation="@dimen/dimen_10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_below="@+id/phoneText"
        android:id="@+id/phoneEditText"
        android:fontFamily="@font/roboto_condensed_bold"
        android:layout_toRightOf="@id/text91"
        android:text="+917838238498"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:textSize="@dimen/dimen_20sp"
        android:textColor="#21274b"
        android:background="@drawable/common_edit_text"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:paddingLeft="@dimen/dimen_40dp"
        android:paddingRight="@dimen/dimen_40dp"
        android:background="@drawable/cancel_button"
        android:textSize="@dimen/dimen_24sp"
        android:textColor="@color/color15335d"
        android:elevation="@dimen/dimen_10dp"
        android:id="@+id/cancelButton"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_condensed_bold"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_40dp"

        />
    <Button
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:text="Add"
        android:background="@drawable/common_button"
        android:textSize="@dimen/dimen_24sp"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:textColor="#ffff"
        android:elevation="@dimen/dimen_10dp"
        android:layout_toRightOf="@id/cancelButton"
        android:id="@+id/addContact"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_condensed_bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_40dp"

        />


</RelativeLayout>
</layout>